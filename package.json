{
  "name": "@backtrack/core",
  "version": "0.1.28",
  "main": "dist/backtrack.js",
  "types": "dist/backtrack.d.ts",
  "license": "MIT",
  "author": "Chris Blossom",
  "repository": "chrisblossom/backtrack",
  "homepage": "https://github.com/chrisblossom/backtrack",
  "description": "Extendable task runner / file and build manager",
  "keywords": [
    "build",
    "make",
    "tool",
    "system",
    "pipeline",
    "configuration",
    "config",
    "file",
    "management",
    "manager",
    "task",
    "runner",
    "bootstrap",
    "boilerplate",
    "generator",
    "yeoman",
    "yo",
    "gulp",
    "grunt",
    "webpack",
    "rollup",
    "babel",
    "flow",
    "typescript",
    "prettier",
    "eslint",
    "jest",
    "mocha"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "bin": {
    "backtrack": "./dist/cli/cli.js"
  },
  "files": [
    "dist/",
    "paths.js"
  ],
  "scripts": {
    "clean": "del-cli --dot=true \"./dist/*\"",
    "check-all": "npm run typescript && npm run lint && npm run test",
    "lint": "eslint --ext .ts,.js .",
    "lint.fix": "eslint --ext .ts,.js --fix .",
    "typescript": "tsc",
    "format": "prettier \"**/*.{js,mjs,jsx,ts,tsx,json,scss,less,css,md,yml,yaml}\" --write",
    "test": "jest",
    "test.ci": "jest --ci --no-cache --coverage --maxWorkers 2 && codecov",
    "build": "npm run clean && npm run build.compile && npm run build.types",
    "build.compile": "cross-env NODE_ENV=production babel src -d dist --extensions .ts --verbose --ignore */**/*.d.ts,**/**/*.test.ts,*/**/__sandbox__/ --source-maps",
    "build.types": "cross-env NODE_ENV=production tsc --project tsconfig.types.json",
    "dev": "npm run clean && cross-env NODE_ENV=development babel -w src -d dist --extensions .ts --verbose --ignore */**/*.d.ts,**/**/*.test.ts,*/**/__sandbox__/ --source-maps",
    "prepublishOnly": "npm run check-all && npm run build",
    "git-pre-commit": "lint-staged",
    "git-pre-push": "npm run check-all"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-transform-strict-mode": "^7.2.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.3.3",
    "@chrisblossom/eslint-config": "^4.0.10",
    "@types/cosmiconfig": "^5.0.3",
    "@types/dotenv": "^6.1.0",
    "@types/execa": "^0.9.0",
    "@types/fs-extra": "^7.0.0",
    "@types/hapi__joi": "^15.0.1",
    "@types/jest": "^24.0.12",
    "@types/joi": "^14.3.2",
    "@types/lodash": "^4.14.123",
    "@types/node": "^12.0.2",
    "babel-jest": "^24.5.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "codecov": "^3.2.0",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.15.3",
    "husky": "^2.1.0",
    "jest": "^24.5.0",
    "jest-serializer-path": "^0.1.15",
    "jest-snapshot-serializer-function-name": "^1.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "temp-sandbox": "^2.0.0",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "chalk": "^2.4.2",
    "core-js": "^3.0.1",
    "cosmiconfig": "^5.2.0",
    "deep-keys": "^0.5.0",
    "del": "^4.1.1",
    "dotenv": "^8.0.0",
    "ex-config": "^3.0.0",
    "execa": "^1.0.0",
    "fs-extra": "^8.0.1",
    "lodash": "^4.17.11",
    "parent-module": "^2.0.0",
    "read-dir-deep": "^5.0.0",
    "read-pkg-up": "^6.0.0",
    "resolve-with-prefix": "^2.0.0",
    "slash": "^3.0.0",
    "sort-keys": "^3.0.0",
    "source-map-support": "^0.5.11"
  }
}
