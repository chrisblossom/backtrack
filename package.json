{
  "name": "@backtrack/core",
  "version": "0.1.23",
  "main": "dist/backtrack.js",
  "license": "MIT",
  "author": "Chris Blossom",
  "repository": "chrisblossom/backtrack",
  "homepage": "https://github.com/chrisblossom/backtrack",
  "description": "Extendable task runner / file and build manager",
  "keywords": [
    "build",
    "make",
    "tool",
    "system",
    "pipeline",
    "configuration",
    "config",
    "file",
    "management",
    "manager",
    "task",
    "runner",
    "bootstrap",
    "boilerplate",
    "generator",
    "yeoman",
    "yo",
    "gulp",
    "grunt",
    "webpack",
    "rollup",
    "babel",
    "flow",
    "typescript",
    "prettier",
    "eslint",
    "jest",
    "mocha"
  ],
  "engines": {
    "node": ">=6.9.0",
    "npm": ">=3.10.10"
  },
  "bin": {
    "backtrack": "./dist/cli/cli.js"
  },
  "files": [
    "dist/",
    "paths.js"
  ],
  "scripts": {
    "clean": "del-cli ./dist/*",
    "check-all": "npm run typescript && npm run lint && npm run test",
    "lint": "eslint --ext .ts,.js .",
    "lint.fix": "eslint --fix .",
    "typescript": "tsc",
    "format": "prettier \"**/*.{js,mjs,jsx,ts,tsx,json,scss,less,css,md,yml,yaml}\" --write",
    "test": "jest",
    "test.ci": "jest --ci --no-cache --coverage --maxWorkers 2 && codecov",
    "build": "npm run clean && npm run build.typescript && npm run build.typescript.declartions",
    "build.typescript": "cross-env NODE_ENV=production babel src -d dist --extensions .ts --ignore */**/*.d.ts,**/**/*.test.ts,*/**/__sandbox__/ --source-maps",
    "build.typescript.declartions": "cross-env NODE_ENV=production tsc --project tsconfig.declaration.json",
    "dev": "npm run clean && cross-env NODE_ENV=development babel -w src -d dist --extensions .ts --ignore */**/*.d.ts,**/**/*.test.ts,*/**/__sandbox__/ --source-maps",
    "prepublishOnly": "npm run check-all && npm run build",
    "git-pre-commit": "lint-staged",
    "git-pre-push": "npm run check-all"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-transform-strict-mode": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@chrisblossom/eslint-config": "^4.0.2",
    "@types/cosmiconfig": "^5.0.3",
    "@types/del": "^3.0.1",
    "@types/dotenv": "^6.1.0",
    "@types/execa": "^0.9.0",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.11",
    "@types/joi": "^14.0.1",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.18",
    "@types/read-pkg-up": "^3.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "codecov": "^3.1.0",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.11.1",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-serializer-path": "^0.1.15",
    "jest-snapshot-serializer-function-name": "^1.1.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "chalk": "^2.4.1",
    "cosmiconfig": "^5.0.7",
    "deep-keys": "^0.5.0",
    "del": "^3.0.0",
    "dotenv": "^6.2.0",
    "ex-config": "^1.0.12",
    "execa": "^1.0.0",
    "fs-extra": "^7.0.1",
    "joi": "^12.0.0",
    "lodash": "^4.17.11",
    "parent-module": "^1.0.0",
    "read-pkg-up": "^4.0.0",
    "resolve-with-prefix": "^1.0.8",
    "slash": "^2.0.0",
    "sort-keys": "^2.0.0",
    "source-map-support": "^0.5.9"
  }
}
