{
  "name": "@backtrack/core",
  "version": "0.1.5",
  "main": "dist/backtrack.js",
  "license": "ISC",
  "author": "Chris Blossom",
  "repository": "chrisblossom/backtrack",
  "homepage": "https://github.com/chrisblossom/backtrack",
  "description": "Extendable task runner / file and build manager",
  "keywords": [
    "build",
    "make",
    "tool",
    "system",
    "pipeline",
    "configuration",
    "config",
    "file",
    "management",
    "manager",
    "task",
    "runner",
    "bootstrap",
    "boilerplate",
    "generator",
    "yeoman",
    "yo",
    "gulp",
    "grunt",
    "webpack",
    "rollup",
    "babel",
    "flow",
    "typescript",
    "prettier",
    "eslint",
    "jest",
    "mocha"
  ],
  "engines": {
    "node": ">=6.9.0",
    "npm": ">=3.10.10",
    "yarn": ">=1.3.2"
  },
  "devEngines": {
    "node": ">=8.9.0",
    "npm": ">=5.5.1"
  },
  "bin": {
    "backtrack": "./dist/cli/cli.js"
  },
  "files": [
    "dist/",
    "flow-typed/",
    "paths.js"
  ],
  "scripts": {
    "clean": "del-cli ./dist/*",
    "check": "concurrently \"npm run flow\" \"npm run lint\" \"npm run test\"",
    "lint": "eslint .",
    "lint.fix": "eslint --fix .",
    "flow": "flow",
    "format": "prettier */**/*.{js,md,json} --write",
    "test": "jest",
    "test.ci": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build": "npm run clean && concurrently \"npm run build.babel\" \"npm run build.flow\"",
    "build.babel": "cross-env NODE_ENV=production babel src -d dist --ignore test.js,__sandbox__/ --source-maps",
    "build.flow": "cross-env NODE_ENV=production flow-copy-source --ignore \"**/*.test.js\" --ignore \"**/__sandbox__/**/*\" src dist",
    "dev": "npm run clean && concurrently \"npm run dev.babel\" \"npm run dev.flow\"",
    "dev.babel": "cross-env NODE_ENV=development babel -w src/ -d dist/ --ignore test.js,__sandbox__/ --source-maps",
    "dev.flow": "cross-env NODE_ENV=development flow-copy-source -w --ignore \"**/*.test.js\" --ignore \"**/__sandbox__/**/*\" src dist",
    "precommit": "lint-staged",
    "prepush": "npm run check",
    "prepublishOnly": "npm run check && npm run build"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@chrisblossom/eslint-config": "^2.0.7",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.1",
    "cross-env": "^5.1.4",
    "del-cli": "^1.1.0",
    "eslint": "^4.19.1",
    "flow-bin": "^0.71.0",
    "flow-copy-source": "^1.3.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-serializer-path": "^0.1.15",
    "jest-snapshot-serializer-function-name": "^1.1.0",
    "lint-staged": "^7.1.0",
    "prettier": "^1.12.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.4.1",
    "cosmiconfig": "^4.0.0",
    "deep-keys": "^0.5.0",
    "del": "^3.0.0",
    "dotenv": "^5.0.1",
    "ex-config": "^1.0.6",
    "execa": "^0.10.0",
    "fs-extra": "^6.0.0",
    "joi": "^12.0.0",
    "lodash": "^4.17.10",
    "parent-module": "^0.1.0",
    "read-pkg-up": "^3.0.0",
    "resolve-with-prefix": "^1.0.4",
    "slash": "^2.0.0",
    "sort-keys": "^2.0.0",
    "source-map-support": "^0.5.5"
  }
}
